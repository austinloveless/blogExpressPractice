<div class="ui main text container segment">
    <div class="ui huge header"> New Blog</div>
    <form class="ui form" action="/blogs" method="post">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" placeholder="Title" required>
      </div>
      <div class="field">
        <label>Image</label>
        <input  type="text" name="blog[image]" placeholder="Image">
      </div>
      <div class="field">
        <label>Blog Content</label>
        <textarea name="blog[body]" placeholder="Blog Content Here" required></textarea>
      </div>
      <input class="ui violet big inverted button" type="submit">
    </form>
</div>

